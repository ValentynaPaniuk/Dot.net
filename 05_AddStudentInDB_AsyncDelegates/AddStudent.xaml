<Window x:Class="_03_AddStudentInDB.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_AddStudentInDB"
        mc:Ignorable="d"
        Title="AddStudent" Height="450" Width="374">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="359*"/>
            <RowDefinition Height="359*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" >
            <Label Content="Add Student"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBox Name="tb_Name" Width="200" Height="40" Margin="10" Background="Aqua"/>
            <TextBox Name="tb_Surname" Width="200" Height="40" Margin="10" Background="Aqua"/>
            <ComboBox Name="cb_Groups" Width="200" Height="40" Margin="10" Background="Aqua"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button Content="Add Student" Name="bt_Add" Width="200" Height="40" Margin="10" Background="Aqua" Click="Bt_Add_Click"/>
        </StackPanel>

    </Grid>
</Window>
