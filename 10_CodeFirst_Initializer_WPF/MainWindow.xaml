<Window x:Class="_10_CodeFirst_Initializer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_CodeFirst_Initializer_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
       

        <TabControl Background="Green" Grid.Column="1" x:Name="tabControl">
            <TabItem Header="Products">
                <DataGrid x:Name="dgproduct"></DataGrid>
            </TabItem>
            <TabItem Header="Orders">
                <DataGrid x:Name="dgorders"></DataGrid>
            </TabItem>
            <TabItem Header="Clients">
                <DataGrid x:Name="dgclients"></DataGrid>
            </TabItem>
        
        </TabControl>
        

    </Grid>
</Window>
